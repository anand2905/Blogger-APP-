<!DOCTYPE html>
<html>
  <head>
    <title>BloggerApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div id="sidebar">
      <div id="logo">
        <%= link_to root_path do %>
          <%#= image_tag "logo.svg" %>
        <% end %>
      </div>

      <ul>
        <li class="category">Website</li>
        <li><%= link_to "Blog", root_path %></li>
      </ul>

      <ul>
        <li class="category">Social</li>
        <li><a href="https://github.com/anand2905">Github</a></li>
        <li><a href="mailto:anand29.ku@gmail.com">Email</a></li>
      </ul>
      <% if !user_signed_in? %>
        <p class="sign_in">
        <%= link_to "User Login", new_user_session_path %>
        </p>
      <% end %>
    </div>
    <div id="main_content">
      <div id="header">
        <p><%= link_to "All Posts", root_path %></p>

        <% if user_signed_in? %>
          <div class="buttons">
            <button class="button"><%= link_to "New Post", new_post_path %>
            </button>
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "button" %>
          </div>
        <% end %>
      </div>
        <% flash.each do |name, msg| %>
          <%= content_tag(:div, msg, class: "alert") %>
        <% end %>
      <%= yield %>
    </div>
  </body>
</html>
